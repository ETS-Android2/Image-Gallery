<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyProfileActivity">

    <RelativeLayout
        android:id="@+id/bar"
        android:background="@drawable/border_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/btn_back"
            android:background="@drawable/ic_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_logout"
            android:src="@drawable/ic_logout"
            android:background="#00FFFFFF"
            android:layout_width="28dp"
            android:layout_height="22.86dp"
            android:layout_marginEnd="12dp"
            android:tooltipText="@string/logout"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/title"
            android:text="@string/profile"
            style="@style/bar_title" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/main_content"
        android:scrollbarSize="0dp"
        android:paddingHorizontal="16dp"
        android:visibility="visible"
        android:layout_below="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="64dp">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:background="@drawable/circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_profile"
                    android:contentDescription="@string/todo" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="@string/user" style="@style/title" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_marginBottom="24dp"
                android:text="@string/user_city"
                style="@style/sub_title" />

<!--            <Button-->
<!--                android:id="@+id/btn_follow"-->
<!--                android:layout_marginVertical="12dp"-->
<!--                android:text="@string/follow_user"-->
<!--                style="@style/button_dark" />-->

            <Button
                android:id="@+id/btn_message"
                android:layout_marginVertical="12dp"
                android:text="@string/message"
                style="@style/button_light"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_marginVertical="12dp"
                android:text="@string/edit_profile"
                style="@style/button_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/user_gallery_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/divider">

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/user_gallery_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/divider">

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_no_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/no_photos_yet"
                style="@style/sub_title" />

        </LinearLayout>


    </ScrollView>

    <include
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/nav_menu"/>

</RelativeLayout>
